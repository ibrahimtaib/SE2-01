// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//TODO should we add a Group table? 

model Teacher {
  id             Int        @id @default(autoincrement())
  surname        String
  name           String
  email          String
  COD_GROUP      String
  COD_DEPARTMENT String
  Proposal       Proposal[]
}

model Degree {
  id           Int       @id @default(autoincrement())
  COD_DEGREE   Int       @unique
  TITLE_DEGREE String
  CFU          Int
  Student      Student[]
}

model Courses {
  id                Int                 @id @default(autoincrement())
  COD_COURSE        Int                 @unique
  TITLE_COURSE      String
  RequiredKnowledge RequiredKnowledge[]
}

model Career {
  id           Int    @id @default(autoincrement())
  COD_COURSE   Int
  TITLE_COURSE String
  CFU          Int
  grade        Int
  date         Int
  // TODO add student Id here? check with teacher 
}

model Student {
  id              Int    @id @default(autoincrement())
  surname         String
  name            String
  gender          String
  nationality     String
  email           String
  COD_DEGREE      Int
  ENROLLMENT_YEAR Int
  degree          Degree @relation(fields: [COD_DEGREE], references: [COD_DEGREE])
}

model Proposal {
  id                Int                 @id @default(autoincrement())
  title             String
  supervisor        Int
  coSupervisors     String?
  keywords          String[]
  type              String
  groups            String[]
  description       String
  notes             String?
  expiration        DateTime
  level             String
  cdsProgrammes     String
  teacher           Teacher             @relation(fields: [supervisor], references: [id])
  requiredKnowledge RequiredKnowledge[]
}

// Joint table between Courses and Proposal
model RequiredKnowledge {
  id         Int      @id @default(autoincrement())
  proposalId Int
  courseId   Int
  proposal   Proposal @relation(fields: [proposalId], references: [id])
  course     Courses  @relation(fields: [courseId], references: [id])
}
